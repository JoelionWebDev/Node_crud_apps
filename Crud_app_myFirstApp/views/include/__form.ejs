<form action="/api/users" method="POST" id="form">
  <div class="new-users">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" name="name" id="nam" placeholder="Name" />
    </div>
    <div class="form-group">
      <label for="email">Email</label>
      <input
        type="email"
        name="email"
        id="nam"
        placeholder="example@gmail.com"
      />
    </div>

    <div class="form-group fom">
      <label for="gender">Gender</label>
      <div class="radio-inline">
        <input type="radio" name="gender" id="radio-1" value="male"/>
        <label for="radio-1" id="radio1">Male</label>
      </div>
      <div class="radio-inline">
        <input type="radio" name="gender" id="radio-2" value="female"/>
        <label for="radio-2" id="radio2">Female</label>
      </div>
    </div>
    <div class="form-group fom">
      <label for="Status">Status</label>
      <div class="radio-inline">
        <input type="radio" name="status" id="radio-3" value="active" />
        <label for="radio-3" id="radio3">Active</label>
      </div>
      <div class="radio-inline">
        <input type="radio" name="status" id="radio-4" value="inactive"/>
        <label for="radio-4" id="radio4">Inactive</label>
      </div>
    </div>
    <div class="form-group">
      <button class="btn-save" type="submit">Save</button>
    </div>
  </div>
</form>
