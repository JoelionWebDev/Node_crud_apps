<!--/header-->
 <main class="site-main">
  <div class="container">
  <div class="usersA gradient">
    <a href="/" class="user"> 
      <span class="text-gradient">
        All User <i class="fas fa-user"></i>
      </span>
    </a>
  </div>

  <div class="user-txt">
    <h2>Update</h2>
    <span class="text-small"> Use the bellow from to update your account </span>
  </div>
  

<!--form-->

<form action="/api/users/<%= user._id%>" method="post" id="update-form">
  <div class="new-users">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="hidden" name="id" value="<%=user._id%>"  />
      <input type="text" name="name" value="<%= user.name%>" placeholder="Name" id="nam" />
    </div>
    <div class="form-group">
      <label for="email">Email</label>
      <input type="email" name="email" value="<%= user.email%>" placeholder="example@gmail.com" id="nam"
      />
    </div>

    <div class="form-group fom">
      <label for="gender">Gender</label>
      <div class="radio-inline">
        <input type="radio" name="gender" id="radio-1" value="male" <%= user.gender == 'male' ? 'checked': ''%>/>
        <label for="radio-1" id="radio1">Male</label>
      </div>
      <div class="radio-inline">
        <input type="radio" name="gender" id="radio-2" value="female" <%= user.gender == 'female' ? 'checked': ''%>/>
        <label for="radio-2" id="radio2">Female</label>
      </div>
    </div>
    <div class="form-group fom">
      <label for="Status">Status</label>
      <div class="radio-inline">
        <input type="radio" name="status" id="radio-3" value="active"<%= user.status == 'active' ? 'checked': ''%>/>
        <label for="radio-3" id="radio3">Active</label>
      </div>
      <div class="radio-inline">
        <input type="radio" name="status" id="radio-4" value="inactive" <%= user.status == 'inactive' ? 'checked': ''%>/>
        <label for="radio-4" id="radio4">Inactive</label>
      </div>
    </div>
    <div class="form-group">
      <button type="submit"  class="btn-save" >Save</button>
    </div>
  </div>
</form>

  <!--form-->

</main>

